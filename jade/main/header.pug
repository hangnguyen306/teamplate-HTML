header.header
  .nav
    .container
      .row
        .col-md-4
          p.txt-home Welcome to Twin Disc (Far East) Pte Ltd
        .col-md-8
          .nv-top-right
            .widget-lang
              span.show-land
                i.fa.fa-globe
                |English 
              .dropdow-lang
                ul
                  li: a(href="#") English 
                  li: a(href="#") 中文
            .widget-login
              span.show-login
                i.fa.fa-user
                |  Asia Dealers Login
              .form-login
                form 
                  input.form-control(type="text" placeholder="Username")
                  input.form-control(type="text" placeholder="Password")
                  .checkbox
                    input(type="checkbox" id="remember")
                    label(for="remember") Remember me
                  button.btn-login.btn Log In
