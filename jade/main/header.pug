    .wrapheader
      .logo
        a(href="index.html"): img(src="img/logo.png" alt="")
      .wrapmenu
        a(href="#menu" class="menu-page btn-menu")
          span.burger-icon-1
          span.burger-icon-2
          span.burger-icon-3
        #menu.mainmenu
          +makeMenu(menu_text, 'menu')
        .top-contact
          a(href="contact-us.html")
            i.fa.fa-laptop 
            | Contact Us